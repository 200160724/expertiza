<% if @type == 'MetareviewResponseMap' %>
    <h1> Metareview Scores  </h1>
<% elsif @type == 'FeedbackResponseMap' %>
    <h1> Author Feedback Scores</h1>
<% elsif @type == 'TeammateReviewResponseMap' %>
    <h1> Teammate Review Scores</h1>
<% elsif @type == 'TeamReviewResponseMap' %>
    <h1> Review Scores</h1>
<%end%>
<%if @scores.length==0%>
No responses found.
<%else%>
<table>
  <tr>

    <th align = 'left'> Question </th>
    <th> Score </th>
    <th> Comments </th>

  </tr>
  <% @scores.each do |s|%>

    <tr>

      <td align = 'left'> <%= Question.find(s.question_id).txt%></td>
      <td align = 'center'> <%= s.score%></td>
      <td align = 'left'> <%= s.comments %> </td>


    </tr>


  <%end%>
  <tr>
    <th> Additional Comment</th>
  </tr>

  <tr>
    <%if !(@response.additional_comment).blank?%>
      <td> <%= @response.additional_comment%> </td>
    <%else%>
      <td> No Comments </td>
    <%end%>
  </tr>
</table>

<%end%>
<br/>
