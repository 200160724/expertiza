<h2>Answers</h2>
<% questions = Question.find_all_by_questionnaire_id(params[:questionnaire_id]) %>

<% i = 0 %>
<% questions.each do |question| %>
    <b>Question <%= i %>: </b><%= label_tag "#{question.id}", question.txt %> <br>
    <% question_type = QuestionType.find_by_question_id(question.id) %>


    <% if(question_type.q_type == 'MCR')  %>
        <% QuizQuestionChoice.find_all_by_question_id(question.id).each do |answer|  %>
            <% if(answer.iscorrect) %>
              Correct answer is: <b><%= p answer.txt  %></b>
            <% end %>
        <% end %>
        <br>
        You answer is: <b><%= p Score.find_by_response_id_and_question_id(@response.id, question.id).comments  %></b>

    <% elsif(question_type.q_type == 'MCC') %>
        <%= p 'Correct answer is: '%>
        <br>
        <% QuizQuestionChoice.find_all_by_question_id(question.id).each do |answer|  %>
            <% if(answer.iscorrect) %>
                <b><%= p answer.txt  %></b>
                <br>
            <% end %>
        <% end %>

        <p>You answer is:<br/>
        <% answer = Score.find_by_response_id_and_question_id(@response.id, question.id) %>
        <% answer.comments.split(',').each do |choice| %>
            <b><%= p choice %></b>
            <br>
        <% end %>
        </p>

    <% elsif(question_type.q_type == 'TF') %>
        <% if QuizQuestionChoice.find_by_question_id(question.id).iscorrect %>
          Correct Answer is: <b>True</b><br/>
        <% else %>
          Correct Answer is: <b>False</b><br/>
        <% end %>
        Your answer is: <b><%= p Score.find_by_response_id_and_question_id(@response.id, question.id).comments %></b>


    <% elsif(question_type.q_type == 'Essay') %>
        Your Answer is: <b><%= p Score.find_by_response_id_and_question_id(@response.id, question.id).comments %></b>

    <% end %><br>
    <br>
    <% i += 1 %>
<% end %>