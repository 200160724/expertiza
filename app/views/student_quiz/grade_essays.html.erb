<header> Grade Essays </header>
<div>
  <table border = "1">
    <%@questionnaires.each do |questionnaire| %>
        <tr bgcolor = "#610B0B"> <th colspan ="3"> <%=questionnaire.name%></th></tr>
        <%@questionnaire_questions[questionnaire.id].each do |question| %>
            <tr> <td colspan = "3"> <%=question.txt%></td></tr>

            <%@quiz_responses[question].each do |quiz_response|%>
                <tr>
                  <% form_tag :action => 'grade_essays' do %>
                      <td><%=quiz_response.response%></td>
                      <td><%=quiz_response.question_id%></td>
                      <td>Submit grade here </td>
                  <%= submit_tag "Grade", :name=>"save" %>
                  <% end %>
                </tr>
            <%end%>
        <%end%>
    <%end%>
  </table>
</div>