<H1>Score for <%= @assignment.name %></H1>



<TABLE class="grades" >
<%= render :partial => 'grades/participant_charts', :locals => {:prefix => nil} %> 
<%= render :partial => 'grades/participant_title', :locals => {:prefix => nil} %>
<%= render :partial => 'grades/participant', :locals => {:prefix => 'user',
														 :team => false,
														 :participant_id => ptid = @participant.id,
														 :index => 0,
                            	   						 :team_size => 1, 
														 :pscore => @pscore} %>

</TABLE>
<h3>Reputation</h3>
<% if @assignment.reputation_algorithm == 'Hamer' %>
    <p id = "reputation_score" class = <%= get_css_style_for_hamer_reputation(review_participant.Hamer)%> style = "width:60px;"><%= @participant.Hamer %></p>
<% elsif @assignment.reputation_algorithm == 'Lauw' %>
    <p id = "reputation_score" class = <%= get_css_style_for_lauw_reputation(review_participant.Lauw)%> style = "width:60px;"><%= @participant.Lauw %></p>
<%end%>
