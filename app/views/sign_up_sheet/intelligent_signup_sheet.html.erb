<script type="text/javascript">
    var selectedList_limit = 3;
    jQuery(document).ready(initialize);

    function initialize() {
        jQuery('.actual-list li').draggable({
            addClasses: false,
            appendTo: 'body',
            containment: 'document',
            cursor: 'move',
            revert: 'invalid',
            helper: "clone"
        });

        jQuery(".selected-list").droppable({
            addClasses: false,
            activeClass: "listActive",
            accept: ":not(.ui-sortable-helper)",
            tolerance: "touch",
            drop: function(event, ui) {
                jQuery(this).find(".placeholder").remove();
                var topicId = ui.draggable.attr('topic-id');
                if(jQuery(this).find("li[topic-id='" + topicId + "']").length == 0) {
                    if(jQuery(this).children().length < selectedList_limit){
                        var link = jQuery("<div class='dismiss'><a href='#' title='Remove bid'>x</a></div>");
                        var list = jQuery("<li class='topic'></li>").html(ui.draggable.html());
                        jQuery(list).attr('topic-id', topicId);
                        jQuery(list).find('div.topic-content-wrapper').prepend(link);
                        jQuery(list).appendTo(this);
                    } else {
                        alert('Maximum number of bids reached. Please remove any bid to continue with subsequent bids.');
                    }
                } else {
                    alert('You have already bid for this topic. Please choose a different topic.');
                }
                // updateValues();
            }
        }).sortable({
            axis: "y",
            cursor: "move",
            items: "li:not(.placeholder)",
            sort: function() {
                jQuery(this).removeClass("listActive");
            },
            update: function() {
                // updateValues();
            }
        }).on("click", ".dismiss", function(event) {
            event.preventDefault();
            jQuery(this).parent().parent().remove();
            // updateValues();
        });


        jQuery("#save-bid-form").submit(function(event){
            jQuery(".selected-list li.topic").each(function(index) {
                jQuery("<input>").attr({
                    type: 'hidden',
                    name: 'topic_id[' + index + ']',
                    value: jQuery(this).attr('topic-id')
                }).appendTo("#save-bid-form");
            });
        });
    }
</script>
