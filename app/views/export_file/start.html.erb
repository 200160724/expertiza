<h2>Export <%= @title %></h2>
<% form_tag({:controller => 'export_file', :action => 'export'}, {:method => 'post', :multipart => true, :name => 'export_form'}) do %>
    <table>
      <tr>
        <td valign='Top'>Delimiter:</td>
        <td>
          <%= radio_button_tag 'delim_type', 'comma', true %> Comma<br/>
          <%= radio_button_tag 'delim_type', 'space' %> Space<br/>
          <%= radio_button_tag 'delim_type', 'tab' %> Tab<br/>
          <%= radio_button_tag 'delim_type', 'other' %> Other <%= text_field_tag 'other_char' %>
          <br/>
        </td>
      </tr>
    </table>
    <% if @model == 'Assignment' %>
        <br/>
        <label for="Export Fields">Export : <br/></label><br/>
        <%= check_box 'options', 'team_score', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Team Score:</label><br/>
        <%= check_box 'options', 'submitted_score', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Submitted Score:</label><br/>
        <%= check_box 'options', 'author_feedback_score', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Metareview Score:</label><br/>
        <%= check_box 'options', 'metareview_score', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Author Feedback Score:</label><br/>
        <%= check_box 'options', 'teammate_review_score', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Teammate Review Score:</label><br/>
        <br/>
    <% end %>
    <% if @model == 'CourseParticipant' %>
        <br/>
        <label for="Export Fields">Export : <br/></label><br/>
        <%= check_box 'options', 'personal_details', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Personal Details :</label><br/>
        <%= check_box 'options', 'role', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Role :</label><br/>
        <%= check_box 'options', 'parent', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Parent :</label><br/>
        <%= check_box 'options', 'email_options', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Email Options :</label><br/>
        <%= check_box 'options', 'handle', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Handle:</label><br/>
        <br/>
    <% end %>
    <% if @model == 'User' %>
        <br/>
        <label for="Export Fields">Export : <br/></label><br/>
        <%= check_box 'options', 'personal_details', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Personal Details :</label><br/>
        <%= check_box 'options', 'role', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Role :</label><br/>
        <%= check_box 'options', 'parent', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Parent :</label><br/>
        <%= check_box 'options', 'email_options', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Email Options :</label><br/>
        <%= check_box 'options', 'handle', {:checked => 'checked'}, "true", "false" %>
        <label for="Export Fields">Handle:</label><br/>
        <br/>
    <% end %>

    <% if @model == 'AssignmentTeam' %>
        <br/>
        <label for="Export Fields">Export : <br/></label><br/>
        <%= check_box 'options', 'team_name', {:checked => 'unchecked'}, "true", "false" %>
        <label for="Export Fields">Team Name Only:</label><br/>
        <br/>
    <% end %>
    <% if @model == 'CourseTeam' %>
        <br/>
        <label for="Export Fields">Export : <br/></label><br/>
        <%= check_box 'options', 'team_name', {:checked => 'unchecked'}, "true", "false" %>
        <label for="Export Fields">Team Name Only:</label><br/>
        <br/>
    <% end %>
    <br/>
    <%= hidden_field_tag('model', @model) %>
    <%= hidden_field_tag('id', @id) %>
    <input type='submit' value='Export' onclick='{export_form.submit();}'/>
    <br/><br/>
<% end %>

<a href="<%= session[:return_to] %>">Back</a>